<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="DarkBrush" Color="#FF333333" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FF293955" />
    <SolidColorBrush x:Key="LightBrush" Color="#FFEBEBEB" />

    <SolidColorBrush x:Key="LightBackground" Color="#FFBECDD7" />
    <SolidColorBrush x:Key="MediumBackground" Color="#FF879BAA" />
    <SolidColorBrush x:Key="DarkBackground" Color="#FF465A7D" />

    <SolidColorBrush x:Key="DarkShadow" Color="#FF8591A2" />
    <SolidColorBrush x:Key="LightShadow" Color="#FFBCC7D8" />
    <SolidColorBrush x:Key="BorderShadow" Color="#FFC9D2E1" />
    <SolidColorBrush x:Key="GroundShadow" Color="#FF9CAAC1" />

    <SolidColorBrush x:Key="ItemBackground" Color="#FFD7D7CD" />
    <SolidColorBrush x:Key="ItemBorder" Color="#FFAAAA96" />

    <SolidColorBrush x:Key="ActiveBreakPoint" Color="#FF963A46" />
    <SolidColorBrush x:Key="InactiveBreakPoint" Color="#FFFFFFFF" />

    <SolidColorBrush x:Key="LineBackground" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ExecutingLine" Color="#FF6CE26C" />
    <SolidColorBrush x:Key="PausedLine" Color="#FFFFEE62" />

    <ImageBrush x:Key="BrushTiles" ImageSource="../Images/background-brush.png" Stretch="None" TileMode="Tile"
                Viewport="0,0,4,4" ViewportUnits="Absolute" />

</ResourceDictionary>